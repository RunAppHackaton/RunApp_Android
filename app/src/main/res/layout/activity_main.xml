<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <com.example.runapp.CircularImageView
            android:id="@+id/roundedPicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/picture"
            android:scaleType="fitXY"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/opensansbold"
                android:textColor="@color/dark_green"
                android:textAlignment="center"
                android:text="Name Surname"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/opensansbold"
                android:textAlignment="center"
                android:textColor="@color/medium_green"
                android:text="Results for today:"
                tools:ignore="HardcodedText" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_rectangle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:gravity="center"
                        android:textColor="#dedede"
                        android:fontFamily="@font/opensansbold"
                        android:padding="8dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10.9"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensansbold"
                        android:padding="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_rectangle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:gravity="center"
                        android:textColor="#dedede"
                        android:fontFamily="@font/opensansbold"
                        android:padding="8dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="216"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensansbold"
                        android:padding="8dp"/>
                </LinearLayout>

                <!-- Third Rectangle -->
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:gravity="center"
                        android:textColor="#dedede"
                        android:fontFamily="@font/opensansbold"
                        android:padding="8dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1:34"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/opensansbold"
                        android:padding="8dp"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginBottom="30dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:labelVisibilityMode="unlabeled"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/bottomNavigationViewMain">

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:background="@drawable/rounded_button">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_inventory" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/rounded_rectangle_button"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Inventory"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:background="@drawable/rounded_button">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_guild" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/rounded_rectangle_button"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Guild"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:clickable="true"
            android:background="@drawable/rounded_button">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_story" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/rounded_rectangle_button"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Story"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@android:color/white"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>